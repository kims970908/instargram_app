  <div>
    <!--------------------------------navbar---------------------------------->
    <%- include('nav.html')%>
    <!--------------------------------container-detail---------------------------------->

    <div class="container mt-4">
      <div class="card mb-3">
        <div class="card-body">
          <h4 class="card-title"><%= data.제목%></h4>
          <p class="card-text"><%=data.내용%></p>
          <p class="card-text"><small class="text-muted"><%= data.날짜%></small></p>
          <p style="display: none;"> 글번호 : <%=data._id%>번</p>
          <button class="btn btn-primary update" data-id="<%=data._id%>">수정하기</button>
          <button class="btn btn-danger delete" data-id="<%=data._id%>">삭제하기</button>
        </div>
      </div>
    </div>


    <script>
      $('.update').click((e) => {

        var target = parseInt(e.target.dataset.id);
        console.log(target);
        location.href = "/edit" + "/" + target
      })

      $('.delete').click(function (e) {
        let target = e.target.dataset.id

        $.ajax({
          method: 'DELETE',
          url: '/delete',
          data: {
            _id: e.target.dataset.id
          }
        }).done(function (result) {
          location.href = '/list'
          console.log("새로고침성공");
        }).fail((error) => {
          console.log('실패');
        })
      })
    </script>

    <!-- Option 3: Jquery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>


