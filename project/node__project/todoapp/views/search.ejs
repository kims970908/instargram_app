<!doctype html>

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <title>Hello, world!</title>
  <style>
    .detail:hover {
      cursor: pointer;
    }
  </style>
</head>

<body>

  <div>
    <!--------------------------------navbar---------------------------------->
    <%- include('nav.html')%>
    <h3 class="text-center mt-4">서버에서 가져온 할일 리스트</h3>
    <!-- ----------------------------검색기능--------------------------------- -->
    <div class="container input-group mb-2">
      <input type="text" class="form-control" id="search-input">
      <button class="input-group-append btn btn-primary" id="search">검색</button>
    </div>
    <!--------------------------------container-list---------------------------------->
    <div class="container-xl">
      <ul class="list-group">
        <% for (var i = 0; i < posts.length; i++){ %>
        <li class="list-group-item" data-id="<%=posts[i]._id%>">
          <div class="row mt-3">
            <div class="col-9">
              <h4 class="detail" data-id="<%=posts[i]._id%>">할일 제목 : <%=posts[i].제목 %></h4>
              <p>할일 마감 날짜 : <%=posts[i].날짜 %></p>
            </div>
            <div class="col-3">
              <button class="btn btn-danger delete" data-id="<%=posts[i]._id%>">삭제</button>
              <button class="btn btn-primary update" data-id="<%=posts[i]._id%>">수정</button>
            </div>
          </div>
        </li>
        <%} %>
      </ul>
    </div>

    <!-- Option 3: Jquery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>


    <script>

      //-------------------detail-page---------------------------- 
      $('.detail').click((e) => {
        var target = parseInt(e.target.dataset.id);
        location.href = "/detail" + "/" + target
      })

      //-------------------update-page---------------------------- 
      $('.update').click((e) => {
        var target = parseInt(e.target.dataset.id);
        location.href = "/edit" + "/" + target
      })

      $('.delete').click(function (e) {
        let target = e.target.dataset.id
        var 지금누른버튼 = $(this)

        $.ajax({
          method: 'DELETE',
          url: '/delete',
          data: {
            _id: e.target.dataset.id
          }
        }).done(function (result) {
          // location.reload()
          console.log("새로고침성공");
          지금누른버튼.parents('li').fadeOut(1000);
        }).fail((error) => {
          console.log('실패');
        })
      })

      // ----------------------------검색기능----------------------------------
      $('#search').click(function () {
        var 입력한값 = $('#search-input').val()
        window.location.replace('/search?value='+입력한값)
      })
    </script>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>

